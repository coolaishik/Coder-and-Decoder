    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton4ActionPerformed
        A.setText("");
        String pwd = new String(D.getPassword());
        String c = C.getText();
        int len = (c.length()) / 7;
        int n = 0, u = 0, m = 0, b = 0, e = 0, r = 0;
        int n1 = 0, u1 = 0, m1 = 0, b1 = 0, e1 = 0, r1 = 0;
        int nu = 0, mb = 0, er = 0;
        String letter = null;
        if (pwd.equals("12345")) {
            for (int i = 0; i <= len; i++) {
                n = (int) (c.charAt(0 + (7 * i)));
                u = (int) (c.charAt(1 + (7 * i)));
                m = (int) (c.charAt(2 + (7 * i)));
                b = (int) (c.charAt(3 + (7 * i)));
                e = (int) (c.charAt(4 + (7 * i)));
                r = (int) (c.charAt(5 + (7 * i)));

                switch (n) {
                    case 48:
                        n1 = 0;
                        break;
                    case 49:
                        n1 = 1;
                        break;
                    case 50:
                        n1 = 2;
                        break;
                    case 51:
                        n1 = 3;
                        break;
                    case 52:
                        n1 = 4;
                        break;
                    case 53:
                        n1 = 5;
                        break;
                    case 54:
                        n1 = 6;
                        break;
                    case 55:
                        n1 = 7;
                        break;
                    case 56:
                        n1 = 8;
                        break;
                    case 57:
                        n1 = 9;
                        break;
                }
                switch (u) {
                    case 48:
                        u1 = 0;
                        break;
                    case 49:
                        u1 = 1;
                        break;
                    case 50:
                        u1 = 2;
                        break;
                    case 51:
                        u1 = 3;
                        break;
                    case 52:
                        u1 = 4;
                        break;
                    case 53:
                        u1 = 5;
                        break;
                    case 54:
                        u1 = 6;
                        break;
                    case 55:
                        u1 = 7;
                        break;
                    case 56:
                        u1 = 8;
                        break;
                    case 57:
                        u1 = 9;
                        break;
                }
                switch (m) {
                    case 48:
                        m1 = 0;
                        break;
                    case 49:
                        m1 = 1;
                        break;
                    case 50:
                        m1 = 2;
                        break;
                    case 51:
                        m1 = 3;
                        break;
                    case 52:
                        m1 = 4;
                        break;
                    case 53:
                        m1 = 5;
                        break;
                    case 54:
                        m1 = 6;
                        break;
                    case 55:
                        m1 = 7;
                        break;
                    case 56:
                        m1 = 8;
                        break;
                    case 57:
                        m1 = 9;
                        break;
                }
                switch (b) {
                    case 48:
                        b1 = 0;
                        break;
                    case 49:
                        b1 = 1;
                        break;
                    case 50:
                        b1 = 2;
                        break;
                    case 51:
                        b1 = 3;
                        break;
                    case 52:
                        b1 = 4;
                        break;
                    case 53:
                        b1 = 5;
                        break;
                    case 54:
                        b1 = 6;
                        break;
                    case 55:
                        b1 = 7;
                        break;
                    case 56:
                        b1 = 8;
                        break;
                    case 57:
                        b1 = 9;
                        break;
                }
                switch (e) {
                    case 48:
                        e1 = 0;
                        break;
                    case 49:
                        e1 = 1;
                        break;
                    case 50:
                        e1 = 2;
                        break;
                    case 51:
                        e1 = 3;
                        break;
                    case 52:
                        e1 = 4;
                        break;
                    case 53:
                        e1 = 5;
                        break;
                    case 54:
                        e1 = 6;
                        break;
                    case 55:
                        e1 = 7;
                        break;
                    case 56:
                        e1 = 8;
                        break;
                    case 57:
                        e1 = 9;
                        break;
                }
                switch (r) {
                    case 48:
                        r1 = 0;
                        break;
                    case 49:
                        r1 = 1;
                        break;
                    case 50:
                        r1 = 2;
                        break;
                    case 51:
                        r1 = 3;
                        break;
                    case 52:
                        r1 = 4;
                        break;
                    case 53:
                        r1 = 5;
                        break;
                    case 54:
                        r1 = 6;
                        break;
                    case 55:
                        r1 = 7;
                        break;
                    case 56:
                        r1 = 8;
                        break;
                    case 57:
                        r1 = 9;
                        break;
                }
                nu = (n1 + m1 + e1) * 10;
                mb = u1 + b1 + r1;
                er = nu + mb;

                switch (er) {
                    case 65:
                        letter = "a";
                        break;
                    case 67:
                        letter = "b";
                        break;
                    case 69:
                        letter = "c";
                        break;
                    case 71:
                        letter = "d";
                        break;
                    case 73:
                        letter = "e";
                        break;
                    case 75:
                        letter = "f";
                        break;
                    case 77:
                        letter = "g";
                        break;
                    case 79:
                        letter = "h";
                        break;
                    case 81:
                        letter = "i";
                        break;
                    case 83:
                        letter = "j";
                        break;
                    case 85:
                        letter = "k";
                        break;
                    case 87:
                        letter = "l";
                        break;
                    case 89:
                        letter = "m";
                        break;
                    case 91:
                        letter = "n";
                        break;
                    case 93:
                        letter = "o";
                        break;
                    case 95:
                        letter = "p";
                        break;
                    case 97:
                        letter = "q";
                        break;
                    case 99:
                        letter = "r";
                        break;
                    case 101:
                        letter = "s";
                        break;
                    case 103:
                        letter = "t";
                        break;
                    case 105:
                        letter = "u";
                        break;
                    case 107:
                        letter = "v";
                        break;
                    case 109:
                        letter = "w";
                        break;
                    case 111:
                        letter = "x";
                        break;
                    case 113:
                        letter = "y";
                        break;
                    case 115:
                        letter = "z";
                        break;
                    case 117:
                        letter = " ";
                        break;

                }

                A.append(letter);

            }

        } else {
            JOptionPane.showMessageDialog(null, "Enter Password", "password error", 2);
        }

