    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        C.setText("");
        String a = A.getText();
        String b = new String(B.getPassword());
        char letter;
        int lnum;
        int l = a.length();
        int nu = 0, mb = 0, er = 0, number = 0;
        if (b.equals("12345")) {
            for (int i = 0; i < l; i++) {
                letter = a.charAt(i);
                switch (letter) {
                    case 'a':
                    case 'A':
                        lnum = 65;
                        break;
                    case 'b':
                    case 'B':
                        lnum = 67;
                        break;
                    case 'c':
                    case 'C':
                        lnum = 69;
                        break;
                    case 'd':
                    case 'D':
                        lnum = 71;
                        break;
                    case 'e':
                    case 'E':
                        lnum = 73;
                        break;
                    case 'f':
                    case 'F':
                        lnum = 75;
                        break;
                    case 'g':
                    case 'G':
                        lnum = 77;
                        break;
                    case 'h':
                    case 'H':
                        lnum = 79;
                        break;
                    case 'i':
                    case 'I':
                        lnum = 81;
                        break;
                    case 'j':
                    case 'J':
                        lnum = 83;
                        break;
                    case 'k':
                    case 'K':
                        lnum = 85;
                        break;
                    case 'l':
                    case 'L':
                        lnum = 87;
                        break;
                    case 'm':
                    case 'M':
                        lnum = 89;
                        break;
                    case 'n':
                    case 'N':
                        lnum = 91;
                        break;
                    case 'o':
                    case 'O':
                        lnum = 93;
                        break;
                    case 'p':
                    case 'P':
                        lnum = 95;
                        break;
                    case 'q':
                    case 'Q':
                        lnum = 97;
                        break;
                    case 'r':
                    case 'R':
                        lnum = 99;
                        break;
                    case 's':
                    case 'S':
                        lnum = 101;
                        break;
                    case 't':
                    case 'T':
                        lnum = 103;
                        break;
                    case 'u':
                    case 'U':
                        lnum = 105;
                        break;
                    case 'v':
                    case 'V':
                        lnum = 107;
                        break;
                    case 'w':
                    case 'W':
                        lnum = 109;
                        break;
                    case 'x':
                    case 'X':
                        lnum = 111;
                        break;
                    case 'y':
                    case 'Y':
                        lnum = 113;
                        break;
                    case 'z':
                    case 'Z':
                        lnum = 115;
                        break;
                    case ' ':
                        lnum = 117;
                        break;
                    default:
                        lnum = 0;
                        break;
                }
                while (number != lnum) {
                    nu = (int) ((int) 10 + (Math.round(50 * Math.random())));
                    mb = (int) ((int) 10 + (Math.round(50 * Math.random())));
                    er = (int) ((int) 10 + (Math.round(50 * Math.random())));
                    number = nu + mb + er;
                }
                C.append(nu + "" + mb + "" + er + ";");
            }
        } else {
            JOptionPane.showMessageDialog(null, "Enter Password", "password error", 2);
        }


        // TODO add your handling code here:
    }//GEN-LAST:event_jButton3ActionPerformed

